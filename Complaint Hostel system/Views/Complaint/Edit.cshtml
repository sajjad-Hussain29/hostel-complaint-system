@model Complaint_Hostel_system.Models.Complaint

@{
    ViewBag.Title = "Edit Complaint";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="mb-4 text-centre" style="text-align:center;">Edit Complaint</h2>


                @using (Html.BeginForm("EditComplaint", "Complaint", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.ComplaintId)

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Title)
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                    <a href="@Url.Action("MyComplaints", "Complaint")" class="btn btn-secondary">Cancel</a>
                }
</div>
            </div>
</div>
    </div>
