<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <!-- Font Awesome (for sidebar icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          integrity="sha512-+...your-hash..."
          crossorigin="anonymous"
          referrerpolicy="no-referrer"/>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <style>
        /* Sidebar styling */
        .sidebar {
            height: 100%;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #3cbdf6; /* dark sidebar */
            padding-top: 20px;
        }

            .sidebar a {
                padding: 12px 15px;
                text-decoration: none;
                font-size: 16px;
                color: #fff;
                display: flex; /* align icon + text */
                align-items: center;
                gap: 10px; /* space between icon and text */
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #34495e;
                    color: #fff;
                }

                    .sidebar a.active i {
                        color: white;
                    }

        .sidebar-section {
            padding: 10px 20px;
        }

        .sidebar-title {
            font-size: 20px;
            text-transform: uppercase;
            font-weight: 700;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 8px;
            margin: 0 0 8px 0;
        }

        .sidebar-divider {
            border: 0;
            height: 2px;
            background: rgba(255, 255, 255, 0.6);
            margin: 8px 0;
        }

        /* Main content area */
        .main-content {
            margin-left: 220px;
            padding: 40px;
            background: linear-gradient(135deg, #ffffff 0%, #e3f2fd 30%, #bbdefb 70%, #90caf9 100%);
            min-height: 100vh;
            width: calc(100% - 220px); /* Ensure it takes full width minus sidebar */
        }

        .complaints-wrapper{
            display: block;
            width: 90%;
            max-width: 1100px;
            margin: 40px auto;
        }

        .my-green-btn {
            display: inline-block;
            background: #28a745;
            color: #fff;
            padding: 12px 28px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: background .15s ease, transform .1s ease;
        }

       .my-green-btn:hover {
                background: #218838;
                transform: translateY(-1px);
       }

       .my-green-btn:active {
                transform: translateY(0);
       }

       .top-bar {
           position: fixed;
           top: 0;
           left: 220px;
           width: calc(100% - 220px);
           background: #08469c;
           color: white;
           height: 60px;
           line-height: 60px;
           padding-left: 20px;
           font-size: 20px;
           font-weight: bold;
           box-sizing: border-box;
           z-index: 1000;
           display: flex;
           align-items: center;
       }
    </style>
</head>
<body>

    <!--Header Bar-->

    @{ var showHeader = ViewBag.ShowHeader != null
            && (bool)ViewBag.ShowHeader; 
        }
    @if (showHeader)
            {
                <header class="top-bar">
                    <h4>
                    <i class="fa-solid fa-building"></i> 
                    Hostel Complaint Management System
                    </h4>
                </header>
            }

    <!-- Sidebar -->
    @if (ViewBag.HideSidebar != true)
    {
     <div class="sidebar">

         <div class="sidebar-section">
             <h5 class="sidebar-title">
                 <i class="fa-solid fa-bars"></i>MENU
             </h5>
             <hr class="sidebar-divider" />
         </div>


         <a href="@Url.Action("MyComplaints", "Complaint")" class="@(ViewBag.Active == "MyComplaints" ? "active" : "")">
             <i class="fa-solid fa-book"></i> My Complaints
         </a>
         <a href="@Url.Action("Create", "Complaint")" class="@(ViewBag.Active == "NewComplaints" ? "active" : "")">
             <i class="fa-solid fa-plus-circle"></i> New Complaint
         </a>

         <hr class="sidebar-divider" />

         <a href="@Url.Action("Profile", "Account")" class="@(ViewBag.Active == "Profile" ? "active" : "")">
             <i class="fa-solid fa-user"></i> Profile
         </a>
         <a href="@Url.Action("Logout", "Account")" class="@(ViewBag.Active == "Logout" ? "active" : "")">
             <i class="fa-solid fa-right-from-bracket"></i> Logout
         </a>

         <hr class="sidebar-divider" />
     </div>
    }

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 220px; margin-top: 60px;">
        @RenderBody()
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>




